@model EntityProject.Models.LoginViewModel
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new {})){
<h1>Login</h1>

<form class="needs-validation" novalidate asp-controller="Home" asp-action="Login" method="post">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-4 col-form-label" asp-for="EmailLog"></label>
        <div class="col-sm-8">
            <input type="email" class="form-control" id="inputEmail3" placeholder="Email" asp-for="EmailLog" required/>
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="EmailLog">@ViewBag.emailError </span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-4 col-form-label" asp-for="PasswordLog"></label>
        <div class="col-sm-8">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password" asp-for="PasswordLog" required />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="PasswordLog">@ViewBag.passwordError </span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-8">
            <button class="btn btn-info">Login</button>
        </div>
    </div>
</form>
}
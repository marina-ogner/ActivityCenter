@model EntityProject.Models.RegistrationViewModel 
@using (Html.BeginForm("Register", "Home", FormMethod.Post, new {})){

<h1>Registration</h1>

<form class="needs-validation" novalidate asp-controller="Home" asp-controller="Home" asp-action="Register" method="post">
    <div class="form-group row">
        <label for="FirstName" class="col-sm-4 col-form-label" asp-for="FirstName"></label>
        <div class="col-sm-8">
            <input class="form-control" id="FirstName" placeholder="First Name" asp-for="FirstName" />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="LastName" class="col-sm-4 col-form-label" asp-for="LastName"></label>
        <div class="col-sm-8">
            <input class="form-control" id="LastName" placeholder="Last Name" asp-for="LastName" />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="Email" class="col-sm-4 col-form-label" asp-for="Email"></label>
        <div class="col-sm-8">
            <input class="form-control" id="Email" placeholder="Email" asp-for="Email" />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="Password" class="col-sm-4 col-form-label" asp-for="Password"></label>
        <div class="col-sm-8">
            <input class="form-control" id="Password" placeholder="Password" asp-for="Password" />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="PasswordConfirmation" class="col-sm-4 col-form-label" asp-for="PasswordConfirmation"></label>
        <div class="col-sm-8">
            <input class="form-control" id="PasswordConfirmation" placeholder="Password Confirmation" asp-for="PasswordConfirmation"
            />
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="PasswordConfirmation"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-8">
            <button class="btn btn-info">Register</button>
        </div>
    </div>
</form>
}

    <div class="page-header">
        <h1>Create an Activity!</h1>
    </div>

    @model EntityProject.Models.ActivityViewModel

    <form class="needs-validation" novalidate asp-controller="Dashboard" asp-action="CreateActivity" method="post">
        <div class="form-group row">
            <label for="Title" class="col-sm-4 col-form-label" asp-for="Title"></label>
            <div class="col-sm-8">
                <input class="form-control" id="Title" asp-for="Title" />
                <div class="invalid-feedback">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="Time" class="col-sm-4 col-form-label" asp-for="Time"></label>
            <div class="col-sm-8">
                <input class="form-control" id="Time" asp-for="Time" />
                <div class="invalid-feedback">
                    <span class="text-danger" asp-validation-for="Time"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="Date" class="col-sm-4 col-form-label" asp-for="Date"></label>
            <div class="col-sm-8">
                <input class="form-control" id="Date" asp-for="Date" />
                <div class="invalid-feedback">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="Duration" class="col-sm-4 col-form-label" asp-for="Duration"></label>
            <div class="col-sm-8">
                <input class="form-control" id="Duration" asp-for="Duration" />
                <div class="invalid-feedback">
                    <span class="text-danger" asp-validation-for="Duration"></span>
                </div>
                <select class="form-control" asp-for="Units">
                <option value=60>Hours</option>
                <option value=1440>Days</option>
                <option value=1>Minutes</option>
            </select>
            <div class="invalid-feedback">
                <span class="text-danger" asp-validation-for="Units"></span>
            </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="Address" class="col-sm-4 col-form-label" asp-for="Address"></label>
                <div class="col-sm-8">
                <input class="form-control" id="Address" asp-for="Address" />
                <div class="invalid-feedback">
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-4 col-form-label" asp-for="Description"></label>
                <div class="col-sm-8">
                    <textarea class="form-control" id="Description" asp-for="Description" id="" cols="300" rows="3"></textarea>
                    <div class="invalid-feedback">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-8">
                    <button class="btn btn-info" id="add">Create Activity</button>
                </div>
            </div>
    </form>
    </div>

